{
  "version": 2,
  "name": "micro-link",
  "builds": [
    { "src": "api/**/*.ts", "use": "@now/node" },
    { "src": "next.config.js", "use": "@now/next" }
  ],
  "routes": [
    { "src": "/shorten", "dest": "/api/shorten", "methods": ["POST"] },
    { "src": "/auth", "dest": "/api/auth", "methods": ["POST"] },
    {
      "src": "/(?<id>[^/]+)",
      "dest": "/api/redirect?id=$id",
      "methods": ["GET"]
    }
  ]
}
